<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include settings and game data -->
        <include domain="sharedpref" path="."/>
        <include domain="database" path="."/>
        <!-- Exclude engine binaries as they're large -->
        <exclude domain="external" path="engines/"/>
    </cloud-backup>
    <device-transfer>
        <!-- Include settings and game data -->
        <include domain="sharedpref" path="."/>
        <include domain="database" path="."/>
        <!-- Exclude engine binaries as they're large -->
        <exclude domain="external" path="engines/"/>
    </device-transfer>
</data-extraction-rules>